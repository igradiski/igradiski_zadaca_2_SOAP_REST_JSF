<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:p="http://primefaces.org/ui">
    <h:head>
        <title>Registracija korisnika</title>
    </h:head>
    <h:body>
        
        <h:form>
            <p:growl />

            <div  align="center" style="width: 400px">
                <p:panel style="background-color: activeborder">
                    <f:facet name="header">Registracija korisnika</f:facet>
                    <h:panelGrid columns="2">
                        <h:outputLabel style="text-align: right">Korisnicko ime: </h:outputLabel>&nbsp;
                        <h:inputText  value="#{registracijaKorisnika.username}"/>&nbsp;
                        
                        <h:outputLabel>Ime: </h:outputLabel>&nbsp;
                        <h:inputText value="#{registracijaKorisnika.ime}"/>&nbsp;
                        
                        <h:outputLabel>Prezime: </h:outputLabel>&nbsp;
                        <h:inputText value="#{registracijaKorisnika.prezime}"/>&nbsp;
                        
                        <h:outputLabel>Lozinka: </h:outputLabel>&nbsp;
                        <h:inputSecret value="#{registracijaKorisnika.lozinka}"/>&nbsp;
                        
                        <h:outputLabel>Email adresa: </h:outputLabel>&nbsp;
                        <h:inputText value="#{registracijaKorisnika.mail}"/>&nbsp;
                        
                        
                        
                    </h:panelGrid>
                    <br></br>
                    <p:commandButton value="Registriraj !" action="#{registracijaKorisnika.RegistrirajKorisnika()}"/>
                    <br></br><br></br><br></br><br></br>
                    <p:commandButton value="Nazad" style="size: 50%" action="#{registracijaKorisnika.VratiNazad()}"/>
                </p:panel>
            </div>
        </h:form>     

    </h:body>
</html>

